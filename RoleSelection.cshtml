@{
    ViewData["Title"] = "Select Role";
}

<h2>Select Role</h2>

<form asp-action="RoleSelection" asp-controller="Account" method="post">
    <div class="form-group">
        <label for="role">Role:</label>
        <select class="form-control" id="role" name="UserRole">
            <option value="Admin">Admin</option>
            <option value="Member">Member</option>
            <option value="Coach">Coach</option>
        </select>
    </div>

    <div class="mt-3">
        <h4>Already have an account?</h4>
        <button type="submit" class="btn btn-success" name="ActionType" value="SignIn">Sign In</button>
    </div>

    <div class="mt-3">
        <h4>New Here?</h4>
        <button type="submit" class="btn btn-primary" name="ActionType" value="SignUp">Sign Up</button>
    </div>
</form>
