@model alpha3.Models.Schedule

<h2>Edit Schedule</h2>

<form asp-action="Edit" method="post">
    <div>
        <label asp-for="Id">ID:</label>
        <input asp-for="Id" readonly />
    </div>
    <div>
        <label asp-for="EventName">Event Name:</label>
        <input asp-for="EventName" required />
    </div>
    <div>
        <label asp-for="EventDate">Date:</label>
        <input asp-for="EventDate" type="date" required />
    </div>
    <div>
        <label asp-for="Location">Location:</label>
        <input asp-for="Location" required />
    </div>
    <!-- Add more fields as necessary based on your Schedule properties -->

    <div>
        <input type="submit" value="Update Schedule" />
    </div>
</form>
