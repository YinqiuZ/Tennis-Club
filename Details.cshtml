@model alpha3.Models.Schedule

<h2>Details for @Model.EventName</h2>

<div>
    <h4>Schedule Details:</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID:</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Event Name:</dt>
        <dd class="col-sm-10">@Model.EventName</dd>

        <dt class="col-sm-2">Date:</dt>
        <dd class="col-sm-10">@Model.EventDate.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2">Location:</dt>
        <dd class="col-sm-10">@Model.Location</dd>

        <dt class="col-sm-2">Assigned Coach:</dt>
        <dd class="col-sm-10">@Model.Coach.UserName</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
<a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
